<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="?attr/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_onProfPic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="26dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/profile_pic" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/pn_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_onProfPic"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorText"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/name_text"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/grey"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:text="@string/timeComm"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_below="@id/rellay1"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:id="@+id/linley1"
        android:layout_below="@id/postImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/heart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/heart_icon"
                    android:button="@null" />

                <Button
                    android:id="@+id/bubble"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/comment_icon">
                </Button>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@id/rellay2"
        android:layout_below="@id/linley1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number_ofLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="13sp"
                android:textColor="?attr/colorText">
            </TextView>

            <TextView
                android:id="@+id/peoplesLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="peoples like"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:textColor="?attr/colorText">
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/post_text"
        android:layout_below="@id/rellay2"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="?attr/colorText2"
        android:textSize="16sp"
        android:text="teeeext" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/comment_lay"
        android:layout_below="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_onUserPic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="26dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/profileImageAU"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/profile_pic" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:id="@+id/addComment">
            </EditText>

        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_shareComment"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:textSize="20sp"
                android:textColor="?attr/colorText2"
                android:background="@drawable/border">
            </Button>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/comment_lay"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/show_commentsLeyout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/show_comments"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="?attr/colorText2"
            android:background="?attr/transparent">
        </Button>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/all_comments"
        android:layout_below="@id/show_commentsLeyout"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>