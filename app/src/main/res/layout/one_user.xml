<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackground"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:background="?attr/colorBackground"
        android:layout_width="match_parent"
        android:id="@+id/lay_ofOneUser"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_onProfPic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="26dp">

            <ImageView
                android:id="@+id/userPhotoMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/profile_pic" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/card_onProfPic"
            android:layout_marginStart="8dp"
            android:text="Line 1"
            android:textColor="?attr/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/card_onProfPic"
            android:text="Line 2"
            android:textColor="?attr/colorText2"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/send_mess"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:drawableTint="?attr/colorText"
                android:background="@drawable/icon_messages">
            </Button>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>